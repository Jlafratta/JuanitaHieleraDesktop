<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane cacheShape="false" focusTraversable="true" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ListClientController">
   <children>
      <Label layoutX="20.0" layoutY="19.0" text="Listado de Clientes">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Separator layoutX="15.0" layoutY="68.0" prefHeight="2.0" prefWidth="970.0" />
      <TableView id="table" fx:id="tableClients" layoutX="20.0" layoutY="83.0" onContextMenuRequested="#contextMenuEvent" prefHeight="500.0" prefWidth="960.0" stylesheets="@stylesheets/style.css">
        <columns>
          <TableColumn fx:id="colClient" editable="false" prefWidth="156.0" resizable="false" text="IdCliente" />
          <TableColumn fx:id="colNombre" prefWidth="166.0" resizable="false" text="NombreCliente" />
            <TableColumn fx:id="colDni" prefWidth="181.0" resizable="false" text="Dni" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox layoutX="468.0" layoutY="21.0" spacing="20.0">
         <children>
            <TextField id="txtBuscar" fx:id="txtBuscar" alignment="CENTER" onAction="#btnBuscar_click" prefHeight="35.0" prefWidth="138.0" promptText="Buscar" />
            <ChoiceBox fx:id="choiceBuscar" prefHeight="35.0" prefWidth="137.0" />
            <Button fx:id="btnBuscar" focusTraversable="false" mnemonicParsing="false" onAction="#btnBuscar_click" onMouseClicked="#searchClientEvent" prefHeight="35.0" prefWidth="137.0" text="Buscar">
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnRefresh" focusTraversable="false" mnemonicParsing="false" onAction="#btnRefresh_click" onMouseClicked="#refreshEvent" prefHeight="35.0" prefWidth="40.0">
               <graphic>
                  <ImageView fitHeight="23.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/actualizar.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
